<h1>Edit Blogger</h1>

<%= form_for @blogger do |f| %>

    <%=f.label :name, "Please enter you Blogger name:" %>
    <%=f.text_field :name %>
    <%=f.label :bio, "Tell us about yourself:" %>
    <%=f.text_field :bio %>
    <%=f.label :age, "How old are you?" %>
    <%=f.number_field :age %>
    <%=f.submit "Edit Account" %>
    
<%end%>
