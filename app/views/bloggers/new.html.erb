<h1>New Blogger</h1>


<%= form_for @blogger do |f| %>

    <%=f.label :name, "Please enter you Blogger name:" %>
    <%=f.text_field :name %>
    <%=f.label :bio, "Tell us about yourself:" %>
    <%=f.text_field :bio %>
    <%=f.label :age, "How old are you?" %>
    <%=f.number_field :age %>
    <%=f.submit "Create Account" %>
<%end%>

<% if flash[:message] %>
        <% flash[:message].each do |message| %>
            <p>
                <strong><%= message %></strong>
            </p>
        <% end %>
    <% end %>
